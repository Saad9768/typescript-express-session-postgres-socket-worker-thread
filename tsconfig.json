  "compilerOptions": {
    "target": "ESNEXT",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "include": [
    "source/**/**/*"
  ]
}